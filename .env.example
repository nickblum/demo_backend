LOG_LEVEL=INFO
LOG_FILE=logs/server.log
LOG_MAX_SIZE=10485760  # 10 MB
LOG_BACKUP_COUNT=5

# Message processing settings
MESSAGE_PROCESSING_INTERVAL=60  # seconds