# Server settings
HOST=0.0.0.0
PORT=8000

# Database settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=thistle_server
DB_USER=your_username
DB_PASSWORD=your_password

# MQTT settings
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password
MQTT_SUBSCRIBE_TOPIC=sensors/data
MQTT_PUBLISH_TOPIC=server/commands

